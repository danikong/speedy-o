&pro_micro {
    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-gpio";
        label = "LED_STRIP";
        chain-length = <12>;  // Adjust to the number of LEDs in your setup
        color-order = "GRB";  // Color order for WS2812 LEDs
        gpios = <&gpio0 2 GPIO_ACTIVE_HIGH>;  // P0.02 for the data line
    };
};
